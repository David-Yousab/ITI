pipeline {
    agent any
    tools {
        ansible 'Ansible'
    }
    stages {
        stage('giting the cterraform files ') {
            steps {
                git branch: 'main' , url:'https://github.com/David-Yousab/ITI '
            }
        }
        stage('run the playbook') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'david-ssh-key', keyFileVariable: 'SSH_KEY_FILE')]) {
                    sh """
                    ansible-playbook \\
                    -i '44.200.18.23' \\
                    --private-key=\\$SSH_KEY_FILE \\
                    playbook.yaml
                    """
                }
            }
        }
    }
}
