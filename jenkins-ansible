pipeline {
    agent any
    tools {
        ansible 'Ansible'  // Must match the name in Jenkins Global Tools Configuration
    }
    stages {
        stage('Checkout Git Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/David-Yousab/ITI'
            }
        }
        
        stage('Setup SSH Access') {
            steps {
                withCredentials([sshUserPrivateKey(
                    credentialsId: 'david-ssh-key',
                    keyFileVariable: 'SSH_KEY_FILE'
                )]) {
                    sh """
                    # Ensure proper permissions for the key
                    chmod 600 ${SSH_KEY_FILE}
                    
                    # Copy public key to target server (replace ec2-user with your username)
                    ssh-keyscan 44.203.13.10 >> ~/.ssh/known_hosts
                    ssh-copy-id -i ${SSH_KEY_FILE} ec2-user@44.203.13.10
                    """
                }
            }
        }
        
        stage('Run Ansible Playbook') {
            steps {
                withCredentials([sshUserPrivateKey(
                    credentialsId: 'david-ssh-key',
                    keyFileVariable: 'SSH_KEY_FILE'
                )]) {
                    sh """
                    # Verify Ansible can connect
                    ansible all -i '44.203.13.10,' --private-key=${SSH_KEY_FILE} -m ping
                    
                    # Run the playbook
                    ansible-playbook -i '44.203.13.10,' --private-key=${SSH_KEY_FILE} playbook.yaml
                    """
                }
            }
        }
    }
}
